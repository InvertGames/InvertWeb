@model MVCForum.Website.ViewModels.PurchasesViewModel
@if (ViewBag.Message != null)
{
    <p class="text-success">@ViewBag.Message</p>
}
<h2>Subscriptions</h2>
<hr/>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Started On</th>
            <th>Name</th>
            
            <th>Amount</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model.Subscriptions)
    {
        <tr>
            <td>@item.StartedOn</td>
            <td>@item.Name</td>
            
            <td>$@item.Amount Per Month</td>
            <td>@item.Status</td>
            <td>@item.Id</td>
            <td>
                <a class="btn btn-danger" onclick="return confirm('Are you sure you want to cancel?  You will have to pay the buy-in price again to restart your subscription.')" 
                   href="@Url.Action("CancelSubscription","Members")/@item.Id">Cancel Subscription</a>
            </td>
        </tr>
    } 
</table>
<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 id="myModalLabel">Modal header</h3>
    </div>
    <div class="modal-body">
        <p>One fine body…</p>
    </div>
    <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
        <button class="btn btn-primary">Save changes</button>
    </div>
</div>

<h2>Charges</h2>
<hr/>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <th>Card</th>
            <th>Message</th>
            <th>Is Paid</th>
            <th>Total</th>
        </tr>
    </thead>
    @foreach (var item in Model.Payments)
    {
        <tr>
            <td>@item.Date</td>
            <td>XXXX-XXXX-XXXX-@item.Last4Digits</td>

            <td>
                @if (item.Product != null)
                {
                    @item.Product.Name
                }
                @item.FailureMessage
            </td>
            <td>@(item.Paid.HasValue && item.Paid == true ? "Yes" : "No")</td>
            <td>$@item.Total</td>

        </tr>
    }
</table>